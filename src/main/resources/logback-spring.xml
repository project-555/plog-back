<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                {"@timestamp":%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ},"level":%level,"message":%msg}%n
            </pattern>
        </encoder>
    </appender>
    <appender name="filterAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                {"@timestamp":%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ},"level":%level,"requestID":%X{requestID},"requestURL":%X{requestURL},"caller":%class.%method,"status":%X{status},"requestBody":%X{requestBody},"responseBody":%X{responseBody},"message":%msg}%n
            </pattern>
        </encoder>
    </appender>
    <appender name="aopAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                {"@timestamp":%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ},"level":%level,"requestID":%X{requestID},"caller":%X{caller},"request":%X{request},"response":%X{response},"exception":%X{exception},"message":%msg}%n
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.plogcareers.backend.filter.ControllerLoggingFilter" level="INFO" additivity="false">
        <appender-ref ref='filterAppender'/>
    </logger>
    <logger name='com.plogcareers.backend.aspect.ServiceRepositoryLoggingAspect' level='INFO' additivity='false'>
        <appender-ref ref='aopAppender'/>
    </logger>
</configuration>
